@using Microsoft.Extensions.Options
@inject IOptions<OptionBindSample.Class> clsAccesser;
@{
    ViewData["Title"] = "直接取得注入结果在View中";
}

<h2>直接取得注入结果在View中</h2>

<h4>ClassNo:@clsAccesser.Value.ClassNo</h4>
<h4>ClassDesc:@clsAccesser.Value.ClassDesc</h4>

<h3>Students:</h3>
<div>
    @foreach (var student in clsAccesser.Value.Students)
    {
        <span>Name:@student.Name</span>
        <span>Age:@student.Age</span>
    }
</div>